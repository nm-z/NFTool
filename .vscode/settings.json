{
  "python.defaultInterpreterPath": "/home/nate/Desktop/NFTool/.venv/bin/python",
  "python.testing.pytestEnabled": true,
  "python.testing.unittestEnabled": false,
  "python.testing.cwd": "/home/nate/Desktop/NFTool",
  "python.testing.pytestArgs": [
    "backend/tests",
    "--cov=backend/src",
    "--cov-branch"
  ],
  "python.envFile": "/home/nate/Desktop/NFTool/.env",
  "git.ignoreLimitWarning": true,
  "eslint.workingDirectories": [
    "./frontend"
  ],
  "ruff.lint.select": [
    "E", "F", "W", "I", "UP", "B", "SIM", "C4", "ISC", "RUF"
  ],
  "ruff.fixAll": true,
  "ruff.organizeImports": true,
  "flake8.args": [
    "--max-line-length=88"
  ],
  "pylint.args": [
    "--score=n",
    "--jobs=0",
    "--enable=I0011,I0020,W0511",
    "--notes-rgx=(FIXME|TODO|ruff:\\s*noqa|type:\\s*ignore|pyright:)"
  ],
  "pylint.severity": {
    "I0011": "Error",
    "I0020": "Error",
    "W0511": "Error"
  },
  "pylint.interpreter": [
    "${workspaceFolder}/.venv/bin/python"
  ],
  "pylint.importStrategy": "fromEnvironment",
  "hadolint.hadolintPath": "hadolint",
  "hadolint.cliOptions": [
    "--no-color"
  ],
  "hadolint.maxNumberOfProblems": 100,
  "hadolint.outputLevel": "warning",
  "python.analysis.extraPaths": [
    "./backend"
  ],
  "sarif-viewer.connectToGithubCodeScanning": "off",
  "triggerTaskOnSave.tasks": {
    "1. Lint Dockerfiles (Hadolint)": [
      "**/Dockerfile*"
    ],
    "2. Scan Config Security (Trivy)": [
      "**/Dockerfile*",
      "docker-compose.yml"
    ]
  },
  "files.readonlyInclude": {
    "**/pyrightconfig.json": true,
    "**/backend/pyproject.toml": true
  },
  "files.readonlyFromPermissions": true
}
